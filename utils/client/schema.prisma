generator client {
  provider = "prisma-client-js"
  output   = "../utils/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model dosen {
  nip                               String   @id @unique(map: "nip_2") @db.VarChar(18)
  nama                              String   @db.VarChar(40)
  tanggal_lahir                     DateTime @db.Date
  alamat                            String   @db.Text
  kode_pos                          Int
  no_telp                           String   @db.VarChar(20)
  email                             String   @db.VarChar(40)
  kode_pos_dosen_kode_posTokode_pos kode_pos @relation("dosen_kode_posTokode_pos", fields: [kode_pos], references: [kode_pos], onDelete: NoAction, onUpdate: NoAction, map: "fk_1")

  @@index([kode_pos], map: "fk_1")
}

model kode_pos {
  kode_pos                       Int     @id @unique(map: "kode_pos_2")
  alamat_kecamatan               String  @db.VarChar(40)
  alamat_kokab                   String  @db.VarChar(40)
  alamat_provinsi                String  @db.VarChar(40)
  dosen_dosen_kode_posTokode_pos dosen[] @relation("dosen_kode_posTokode_pos")
}
